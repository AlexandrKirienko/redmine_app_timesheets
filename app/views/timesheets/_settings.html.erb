<p>

  <%=content_tag(:label, l(:label_timesheet_project_label) + ":") %>
  <% projects = settings["project"] == "" ? [[l(:label_timesheet_select), ""]] : []
     projects.concat(Project.all.map { |x| [ x.name, x.id ]})  %>
     <%=select_tag("settings[project]",
                options_for_select(projects,
                                   :selected => settings["project"])) %><br/>
  <%=l(:label_timesheet_project_hint)%>
  <% if settings["project"] == "" %>
      <br><span style="color: red;"><%=l(:label_timesheets_warn_select_project)%></span>
  <% end %>
</p>

<p>
  <%=content_tag(:label, l(:label_timesheet_admin_label) + ":") %>
  <% admins = settings["admin_group"] == "" ? [[l(:label_timesheet_select), ""]] : []
     admins.concat(Group.all.map { |x| [ x.lastname, x.id ]})  %>
  <%=select_tag("settings[admin_group]",
                options_for_select(admins,
                                   :selected => settings["admin_group"])) %><br/>
  <%=l(:label_timesheet_admins_hint)%>
  <% if settings["admin_group"] == "" %>
      <br><span style="color: red;"><%=l(:label_timesheets_warn_select_admins)%></span>
  <% end %>
</p>
